        {% import 'views-work/_macros.twig' as vcp %}
        <div class="vw-alert vw-alert-danger vw-mb-4">
            <p>
            <strong>âš  {{ vcp.t('Please help support the development of this plugin by acquiring a valid license.') }}</strong>
